<%- include('partials/header'); %>

<div>
    <% if (players.length > 0) { %>
    <table class="table" >
        <thead class="thead-dark">
            <tr> 
                <th>Number</th>
                <th style="background-color: darkblue; color: red;"><a href="https://www.americanmeadows.com/plant-classification" style="color: red;">Plant,<br>Name.</a></th>
                <th style="background-color: yellow; color: royalblue;"><a href="https://www.gardeningknowhow.com/edible/vegetables/vgen/plant-spacing-chart.htm" style="color: royalblue;">Space Needed,<br>Hours of Sunlight.</a></th>
                <th style="background-color: green;color: hotpink;"><a href="https://www.ufseeds.com/learning/planting-schedules/" style="color: hotpink;">Plant Time.</a></th>
                <th style="background-color: tomato; color: teal;"><a href="https://hortnews.extension.iastate.edu/2004/7-23-2004/vegguide.html" style="color: teal;">Days to Maturity.</th>
            </tr>
        </thead>
        <tbody>
            <% for (let i = 0; i < players.length; i++) { %>
            <tr>
                <td><%= players[i].id %></td>
                <td><button onclick="search()" id="lookUp" style="background-color: transparent; border-color: transparent;"><%= players[i].first_name %></button></td>
                <td><%= players[i].last_name %></td>
                <td><%= players[i].position %></td>
                <td><%= players[i].number %></td>
                <td><a href="/edit/<%= players[i].id %>" class="btn btn-sm btn-success">Edit</a></td>
                <td><textarea href="/delete/<%= players[i].id %>"  style="width: 100%; border-radius: 4px; box-sizing: border-box;">Notes:</textarea></td>

                <td><a href="/delete/<%= players[i].id %>" class="btn btn-sm btn-danger">Delete</a></td>
            
        </tr>
        
            <% } %>
        </tbody>
    </table>
    <% } else { %>
    <p class="text-center">No plants found.</p>
    <% } %>
</div>
<br><br>
</div>
<div class="dropdown" style="text-align: center;">
    <button class="dropbtn" style="border-color: transparent; background-color: white;">Sites you may be interested in!</button>
    <div class="dropdown-content">
      <a style="background-color: chartreuse" href="https://gardenplanner.almanac.com"><img src="https://gardenplanner.almanac.com/account/assets/images/almanac/logo.png"></a>
      <a style="background-color: chartreuse" href="https://migardener.com"><img src="https://migardener.com/wp-content/uploads/2019/09/MIgardener_Black120-22.svg" width="150" height="100"></a>
      <a style="background-color: chartreuse" href="http://www.puritasnursery.com/Puritas_Nursery/Welcome.html"><img src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcSODDUkxkUCILl4HV6u12wntPYCbfME2lXA-B19fb65BcRAMutc&usqp=CAU" width="175" height="100"></a>
    </div>
    <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>

  </div>
</body>
<style>
.dropdown-content {
  display: none;
  position: absolute;
  background-color: #f1f1f1;
  min-width: 160px;
  box-shadow: 0px 4px 6px 0px chartreuse;
  z-index: 1;
}

.dropdown-content a {
  color: black;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
}



.dropdown:hover .dropdown-content {
    width: 100%;
    display: block;
}


</style>
<script>
    var x = document.getElementById("lookUp").textContent; 
    function search() {
        open( 'https://www.google.com/search?q='+ x +'&oq=google&aqs=chrome..69i57j69i59j0j69i65l2j69i60l3.887j0j7&sourceid=chrome&ie=UTF-8', function (err){
    if (err) throw err;
});
    }
</script>
</html>